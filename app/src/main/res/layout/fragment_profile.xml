<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:layout_marginVertical="25dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/profile_user"
            android:textSize="18dp"
            android:tint="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="User Name: Leang168"/>
        <TextView
            android:id="@+id/profile_fname"
            android:textSize="18dp"
            android:layout_below="@id/profile_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/black"
            android:text="Full Name: Ngoun Mengleang"/>
        <TextView
            android:id="@+id/set_user"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"
            android:text="Set UserName"/>
        <TextView
            android:id="@+id/set_fullname"
            android:textSize="18dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/black"
            android:layout_below="@id/set_user"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"
            android:text="Set FullName"/>
        <TextView
            android:id="@+id/set_password"
            android:textSize="18dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/black"
            android:layout_below="@id/set_fullname"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset Password"/>


    </RelativeLayout>

</LinearLayout>